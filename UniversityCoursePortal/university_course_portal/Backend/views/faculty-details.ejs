        </nav>
      </div>
    </header>
    <!--================ End Header Menu Area =================-->

    <!--================Home Banner Area =================-->
    <section class="banner_area">
      <div class="banner_inner d-flex align-items-center">
        <div class="overlay"></div>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-6">
              <div class="banner_content text-center">
                <h2>Course Details</h2>
                <div class="page_link">
                  <a href="index.html">Home</a>
                  <a href="courses.html">Courses</a>
                  <a href="course-details.html">Courses Details</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--================End Home Banner Area =================-->

    <!--================ Start Course Details Area =================-->
    <section class="course_details_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 course_details_left">
                    <div class="main_image">
                        <img class="img-fluid b" src="img\courses\<%=val %>.jpg" alt="">
                    </div>
                    <div class="content_wrapper">
                        <h4 class="title">Objectives</h4>
                        <div class="content">
                          <%= det.details %>
                        </div>

                        
                        <h4 class="title">Resources</h4>
                        <form method='POST' action='http://localhost:3000/add/resource'>
                            <input type="text" name="Course_id" value="<%=val %>" readonly>
                            <input type="file" name="resources">
                            
                            <button type="submit" class="btn btn-primary submit" id="submit">Submit</button>                        </form>
                            <h4 class="title">ADD TEST</h4>
                            <form method='POST' action='http://localhost:3000/add/test'>
                                <input type="text" name="Course_id" value="<%=val %>" readonly>
                                <input type="text" name="Test_Name"placeholder="Test Name">
                                <input type="text" name="Add_Test" placeholder="url">
                                
                                <button type="submit" class="btn btn-primary submit" id="submit">Submit</button>                        </form>
                                <h4 class="title">ADD MARK</h4>
                                <form method='POST' action='http://localhost:3000/add/mark'>

                                <input type="text" name="Course_id" value="<%=val %>" readonly>
                                <input type="text" name="Test_Name" placeholder="Test Name">
                                <input type="text" name="Roll_no" placeholder="Roll no">
                                <input type="text" name="mark_obt" placeholder="Marks scored">
                                
                                
                                <button type="submit" class="btn btn-primary submit" id="submit">Submit</button>                        </form>
                                <h4 class="title">GRADE</h4>

                                <form method='POST' action='http://localhost:3000/add/grade'>

                                  <input type="text" name="Course_id" value="<%=val %>" readonly  >
                                  <input type="text" name="Roll_no" placeholder="Roll no">
                                  <input type="text" name="grades" placeholder="Grade">
                                   
                                  <button type="submit" class="btn btn-primary submit" id="submit">Submit</button>                        </form>
                              </div>
                </div>


                <div class="col-lg-4 right-contents">
                    <ul>
                        <li>
                            <a class="justify-content-between d-flex" href="#">
                                <p>Faculty Name</p>
                                <span class="or"><%= Facname.F_Fname+" "+Facname.F_Lname %></span>
                            </a>
                        </li>
                        
                       
                        
                    </ul>
                    <a href="#" class="primary-btn2 text-uppercase enroll rounded-0 text-white">Enroll the course</a>

                    <h4 class="title">Reviews</h4>
                    <div class="content">
                        <div class="review-top row pt-40">
                            <div class="col-lg-12">
                                <h6 class="mb-15">Provide Your Rating</h6>
                                <div class="d-flex flex-row reviews justify-content-between">
                                    <span>Quality</span>
                                    <div class="star">
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star"></i>
                                        <i class="ti-star"></i>
                                    </div>
                                    <span>Outstanding</span>
                                </div>
                                <div class="d-flex flex-row reviews justify-content-between">
                                    <span>Puncuality</span>
                                    <div class="star">
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star"></i>
                                        <i class="ti-star"></i>
                                    </div>
                                    <span>Outstanding</span>
                                </div>
                                <div class="d-flex flex-row reviews justify-content-between">
                                    <span>Pace</span>
                                    <div class="star">
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star checked"></i>
                                        <i class="ti-star"></i>
                                        <i class="ti-star"></i>
                                    </div>
                                    <span>Outstanding</span>
                                </div>
                            </div>
                        </div>
                        <div class="Announcement">
                          <h6>Announcement</h6>
                          <form action="/add/announcement" method="POST">
                            <input type="text" name="Course_id" value="<%=val %>" style="display:none" >
                          <textarea name="Announcement" class="form-control" cols="10" rows="10"></textarea>
                          <div class="mt-10 text-right">
                            <input type="submit" value="submit">
                          </div>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================ End Course Details Area =================-->
<script>
      document.getElementById("ln").value=localStorage.getItem('username');
    document.getElementById("ln1").value=localStorage.getItem('username');

</script>
    
      
